@model SchoolDatabase.Models.Course

<Style>
    body{
        background:#1111;
    }




    .card{
            background: #ffffff;
            padding:16px;
            border-radius:20px;
    }


</Style>
<div class="card">
    <h1>@Model.coursename @Model.coursecode</h1>
    <hr>
    <a href="/CoursePage/List">Back to List</a> 
    <a class="alert-warning" href="/CoursePage/DeleteConfirm/@Model.courseid">Delete</a>
    <a href="/CoursePage/Edit/@Model.courseid">Edit</a>
    <p>Teacher ID: @Model.courseid.ToString()</p>
    <p>Start Date: @Model.startdate.ToString("yyyy-M-d")</p>
    <p>Finish Date: @Model.finishdate.ToString("yyyy-M-d")</p>
</div>